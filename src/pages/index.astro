---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---
<Layout title="Pludo Directory">
	<main>
		<div>
			<h1 class="text-center dark:text-white text-black md:text-8xl font-bold pt-8 font-mono text-wrap text-2xl">
				Pludo Directory
			</h1>
		</div>
		<div class="flex flex-wrap p-5 justify-center">
			<Card 
			hosted="https://chw.no/"
			title="CV"
			body="Side Quest"
			source="https://github.com/chrwiencke/Astro-CV"
			dato="2 Nov, 2024"/>
			<Card 
			hosted="https://donotshow.me/"
			title="Temporary Email"
			body="Privacy Project"
			source="https://github.com/chrwiencke/RobertMail"
			dato="15 Des, 2024"/>
			<Card 
			hosted="https://templedns.pludo.org/"
			title="Privacy-focused DNS"
			body="Privacy Project"
			source="/na"
			dato="25 Des, 2024"/>
			<Card 
			hosted="https://short.pludo.org/"
			title="Short Short URL"
			body="Privacy Project"
			source="https://github.com/chrwiencke/shortlinkcfhono"
			dato="21 Des, 2024"/>
			<Card 
			hosted="https://gitbook.pludo.org/k3s"
			title="Kubernetes Prosjekt"
			body="Skole Prosjekt"
			source="https://gitbook.pludo.org/k3s"
			dato="11 Okt, 2024"/>
			<Card 
			hosted="https://weather.pludo.org/"
			title="Weather Flare"
			body="Liten Side Quest"
			source="https://github.com/chrwiencke/weatherflare"
			dato="31 Okt, 2024"/>
			<Card 
			hosted="https://pludoagency.pludo.org/"
			title="Pludo Agency"
			body="Skole Prosjekt"
			source="https://github.com/chrwiencke/pludoagency"
			dato="25 Apr, 2024"/>
			<Card 
			hosted="https://artikkel.pludo.org"
			title="Artikkel"
			body="Skole Prosjekt"
			source="https://github.com/chrwiencke/pludo-samfunnkunnskap"
			dato="26 Okt, 2024"/>
		</div>
	</main>
</Layout>