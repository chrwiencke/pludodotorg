---
interface Props {
	title: string;
	firsth2: string;
	motivation: string;
	solution: string;
	file: string;
}

const { title, firsth2, motivation, solution, file } = Astro.props;
---

<main class="container mx-auto px-4 py-8 max-w-4xl">
    <a href="/" class="fixed top-4 right-4 text-3xl dark:text-white text-black hover:opacity-70 transition-opacity">
        ✕
    </a>
	<div class="mb-12">
		<h1 class="text-center dark:text-white text-black md:text-8xl font-bold pt-8 font-mono text-wrap text-2xl">
			{title}
		</h1>
	</div>
	
	<div class="infrastructure mb-16">
		<h2 class="text-center dark:text-white text-black md:text-4xl font-bold mb-8 font-mono text-wrap text-2xl">
			{firsth2}
		</h2>
		<div class="flex justify-center">
			<img src={`/${file}`} alt="Overview of infrastructure" class="max-w-full h-auto">
		</div>
	</div>
	
	<div class="motivation space-y-6">
		<h3 class="text-center dark:text-white text-black md:text-2xl font-bold mt-8 mb-4 font-mono">
			Motivasjon
		</h3>
		<p class="text-lg dark:text-gray-300 text-gray-700 leading-relaxed">
			{motivation}
		</p>
		<h3 class="text-center dark:text-white text-black md:text-2xl font-bold mt-8 mb-4 font-mono">
			Løsning
		</h3>
		<p class="text-lg dark:text-gray-300 text-gray-700 leading-relaxed">
			{solution}
		</p>
	</div>
</main>
